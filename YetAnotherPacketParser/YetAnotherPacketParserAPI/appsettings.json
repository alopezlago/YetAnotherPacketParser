{
  "Serilog": {
      "MinimumLevel": {
        "Default": "Verbose",
        "Override": {
          "Microsoft": "Warning",
          "Microsoft.Hosting.Lifetime": "Information"
        }
      },
      "WriteTo": [
        {
          "Name": "File",
          "Args": {
            "path": "./logs/yapp.log",
            "rollingInterval": "Month",
            "retainedFileCountLimit": 3,
          }
        }
      ],
    },
    "AllowedHosts": "*",
    "IpRateLimiting": {
      "EnableEndpointRateLimiting": false,
      "StackBlockedRequests": true,
      "RealIpHeader": "X-Real-IP",
      "ClientIdHeader": "X-ClientId",
      "HttpStatusCode": 429,
      "IpWhitelist": [ "127.0.0.1", "::1/10" ],
      "GeneralRules": [
        {
          "Endpoint": "*",
          "Period": "1s",
          "Limit": 3
        },
        {
          "Endpoint": "*",
          "Period": "1h",
          "Limit": 100
        },
        {
          "Endpoint": "*",
          "Period": "1d",
          "Limit": 200
        }
      ]
    }
  }
